<UserControl x:Class="WpfApp1.Controls.HintTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Controls"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Border BorderThickness="2" BorderBrush="{StaticResource Color}" CornerRadius="5" Width="390" Padding="5">
        <Grid>
            <Border Grid.Column="0" Grid.ColumnSpan="2" Background="White" CornerRadius="10"/>
            <TextBlock x:Name="tbTextHint"  Padding="6" MouseDown="HintText_MouseDown" VerticalAlignment="Center" Text="{Binding ElementName=root, Path=Hint}" Style="{StaticResource textHint}"/>
            <TextBox x:Name="FinderText" Text="{Binding ElementName=root, Path=Text}" TextChanged="Finder_TextChanged" Style="{StaticResource textbox}" Padding="6"/>
        </Grid>
    </Border>
</UserControl>
